<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/dialog_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/real_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/l_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/two_intents"
        android:text="@string/name"
        android:textSize="@dimen/m_text_size" />

    <EditText
        android:id="@+id/dialog_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/two_intents"
        android:textSize="@dimen/m_text_size" />

    <TextView
        android:id="@+id/dialog_hw_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/two_intents"
        android:text="@string/hw_count"
        android:textSize="@dimen/m_text_size" />

    <EditText
        android:id="@+id/dialog_hw_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/two_intents"
        android:textSize="@dimen/m_text_size" />
</LinearLayout>