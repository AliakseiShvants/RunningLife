<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/first_song_image_view"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/first_song_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/first_song_image_view"
        android:layout_toRightOf="@id/first_song_image_view"
        android:text="154: Developer Growth: Start Writing"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/song_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/first_song_image_view"
        android:layout_toRightOf="@id/first_song_image_view"
        android:text="2 days ago 19 min"
        android:textSize="8sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/ic_play_circle_outline" />
</RelativeLayout>