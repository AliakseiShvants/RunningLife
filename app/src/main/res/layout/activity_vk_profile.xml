<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main_root_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray300"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        tools:context=".androidui.vk.VkProfileActivity">

        <RelativeLayout
            android:id="@+id/main_content_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/main_foto_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/MAIN_IMG_SIZE"
                android:fitsSystemWindows="true"
                android:src="@drawable/vk_profile_bg" />

            <include
                android:id="@+id/main_toolbar"
                layout="@layout/toolbar_main" />

            <TextView
                android:id="@+id/main_user_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/main_foto_image_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginBottom="@dimen/FIVE_INTENT"
                android:text="@string/USER_NAME"
                android:textColor="@color/white"
                android:textSize="@dimen/L_TEXT_SIZE"
                app:fontFamily="@font/montserrat_medium" />

            <TextView
                android:id="@+id/main_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/main_foto_image_view"
                android:layout_gravity="bottom"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginBottom="@dimen/THREE_INTENT"
                android:text="@string/ONLINE"
                android:textColor="@color/white"
                android:textSize="@dimen/XS_TEXT_SIZE"
                app:fontFamily="@font/montserrat_medium" />

            <ImageView
                android:id="@+id/main_status_icon_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/main_status_text_view"
                android:layout_toEndOf="@id/main_status_text_view"
                android:src="@drawable/ic_outline_smartphone" />

            <ImageView
                android:id="@+id/main_foto_icon_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/main_foto_image_view"
                android:layout_alignBottom="@id/main_foto_image_view"
                android:layout_marginEnd="@dimen/TWO_INTENT"
                android:layout_marginBottom="@dimen/THREE_INTENT"
                app:srcCompat="@drawable/ic_photo_camera" />

            <TextView
                android:id="@+id/main_edit_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_foto_image_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginTop="@dimen/ONE_INTENT"
                android:layout_marginEnd="@dimen/TWO_INTENT"
                android:layout_marginBottom="@dimen/ONE_INTENT"
                android:background="@drawable/edit_button"
                android:gravity="center"
                android:paddingTop="@dimen/ONE_INTENT"
                android:paddingBottom="@dimen/ONE_INTENT"
                android:text="@string/EDIT"
                android:textColor="@color/lightBlue900"
                android:textSize="@dimen/XS_TEXT_SIZE"
                app:fontFamily="@font/montserrat_medium" />

            <ImageView
                android:id="@+id/main_chat_icon_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_edit_text_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginTop="@dimen/ONE_INTENT"
                app:srcCompat="@drawable/ic_message" />

            <TextView
                android:id="@+id/main_message_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_edit_text_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginTop="@dimen/ONE_INTENT"
                android:layout_marginEnd="@dimen/TWO_INTENT"
                android:layout_toEndOf="@id/main_chat_icon_image_view"
                android:text="@string/PROFILE_MESSAGE"
                android:textSize="12sp"
                app:fontFamily="@font/montserrat_medium" />

            <ImageView
                android:id="@+id/main_people_icon_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_chat_icon_image_view"
                android:layout_alignTop="@id/main_friends_text_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                app:srcCompat="@drawable/ic_people" />

            <TextView
                android:id="@+id/main_friends_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_message_text_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginTop="@dimen/TWO_INTENT"
                android:layout_marginEnd="@dimen/TWO_INTENT"
                android:layout_toEndOf="@id/main_people_icon_image_view"
                android:text="@string/FRIENDS"
                android:textSize="@dimen/XS_TEXT_SIZE"
                app:fontFamily="@font/montserrat_medium" />

            <ImageView
                android:id="@+id/main_subscribers_icon_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_people_icon_image_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginTop="@dimen/TWO_INTENT"
                app:srcCompat="@drawable/ic_rss_feed" />

            <TextView
                android:id="@+id/main_subscribers_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_friends_text_view"
                android:layout_alignTop="@id/main_subscribers_icon_image_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_toEndOf="@id/main_subscribers_icon_image_view"
                android:text="@string/SUBSCRIBERS"
                android:textSize="@dimen/XS_TEXT_SIZE"
                app:fontFamily="@font/montserrat_medium" />

            <ImageView
                android:id="@+id/main_location_icon_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_subscribers_icon_image_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginTop="@dimen/TWO_INTENT"
                app:srcCompat="@drawable/ic_home" />

            <TextView
                android:id="@+id/main_location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_subscribers_text_view"
                android:layout_alignTop="@id/main_location_icon_image_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_toEndOf="@id/main_location_icon_image_view"
                android:text="@string/LOCATION"
                android:textSize="@dimen/XS_TEXT_SIZE"
                app:fontFamily="@font/montserrat_medium" />

            <ImageView
                android:id="@+id/main_more_info_icon_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_location_icon_image_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginTop="@dimen/TWO_INTENT"
                android:layout_marginBottom="@dimen/TWO_INTENT"
                app:srcCompat="@drawable/ic_more_horiz" />

            <TextView
                android:id="@+id/main_more_info_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_location_text_view"
                android:layout_alignTop="@id/main_more_info_icon_image_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_toEndOf="@id/main_more_info_icon_image_view"
                android:text="@string/DETAIL_INFO"
                android:textColor="@color/lightBlue900"
                android:textSize="@dimen/XS_TEXT_SIZE"
                app:fontFamily="@font/montserrat_medium" />

            <TextView
                android:id="@+id/main_first_intent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/HALF_INTENT"
                android:layout_below="@id/main_more_info_icon_image_view"
                android:layout_marginTop="@dimen/HALF_INTENT"
                android:background="@color/gray300" />

            <ImageView
                android:id="@+id/main_news_icon_image_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@id/main_first_intent"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginTop="@dimen/ONE_INTENT"
                android:layout_marginBottom="@dimen/ONE_INTENT"
                android:src="@drawable/ic_stub" />

            <TextView
                android:id="@+id/main_news_text_view"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@id/main_first_intent"
                android:layout_alignBaseline="@id/main_news_icon_image_view"
                android:layout_marginStart="@dimen/TWO_INTENT"
                android:layout_marginTop="@dimen/ONE_INTENT"
                android:layout_toEndOf="@id/main_news_icon_image_view"
                android:text="@string/QUESTION"
                android:textSize="@dimen/XS_TEXT_SIZE"
                app:fontFamily="@font/montserrat_medium" />

            <ImageView
                android:id="@+id/main_news_foto_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_first_intent"
                android:layout_marginTop="@dimen/ONE_INTENT"
                android:layout_marginEnd="@dimen/TWO_INTENT"
                android:layout_toStartOf="@id/main_news_camera_image_view"
                android:src="@drawable/ic_outline_insert_photo" />

            <ImageView
                android:id="@+id/main_news_camera_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_first_intent"
                android:layout_alignEnd="@id/main_first_intent"
                android:layout_marginTop="@dimen/ONE_INTENT"
                android:layout_marginEnd="@dimen/TWO_INTENT"
                android:src="@drawable/ic_outline_local_see" />

            <TextView
                android:id="@+id/main_second_intent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/HALF_INTENT"
                android:layout_below="@id/main_news_icon_image_view"
                android:layout_marginTop="@dimen/HALF_INTENT"
                android:background="@color/gray300" />

        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/main_bottom_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray50"
        app:menu="@menu/bottom_navigation" />
</RelativeLayout>
