<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray200">

    <ImageView
        android:id="@+id/user_move_avatar"
        android:layout_width="@dimen/avatar_nav_size"
        android:layout_height="@dimen/avatar_nav_size"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_avatar_stub"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_move_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Aliaksei Shvants"
        android:textSize="@dimen/s_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/user_move_avatar"
        app:layout_constraintTop_toTopOf="@id/user_move_avatar" />

    <TextView
        android:id="@+id/user_move_begin_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/user_move_avatar"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/user_move_avatar"
        android:text="Grodno, Grodno region"
        android:textSize="@dimen/xs_text_size"
        app:layout_constraintStart_toStartOf="@id/user_move_full_name"
        app:layout_constraintTop_toBottomOf="@+id/user_move_full_name" />

</androidx.constraintlayout.widget.ConstraintLayout>