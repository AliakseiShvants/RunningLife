<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageView
        android:id="@+id/userAvatar"
        android:layout_width="@dimen/avatar_nav_size"
        android:layout_height="@dimen/avatar_nav_size"
        android:layout_marginStart="@dimen/two_intents"
        android:layout_marginTop="@dimen/two_intents"
        android:layout_marginBottom="@dimen/two_intents"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/one_intent"
        android:textSize="@dimen/s_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/userLocation"
        app:layout_constraintStart_toStartOf="@id/userLocation" />

    <TextView
        android:id="@+id/userLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/one_intent"
        android:layout_marginBottom="@dimen/one_intent"
        android:textSize="@dimen/xs_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/userAvatar"
        app:layout_constraintStart_toEndOf="@id/userAvatar" />

    <TextView
        android:id="@+id/beginTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/one_intent"
        android:layout_marginBottom="@dimen/one_intent"
        android:textSize="@dimen/xs_text_size"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/userAvatar"
        app:layout_constraintStart_toEndOf="@id/userAvatar" />

</merge>